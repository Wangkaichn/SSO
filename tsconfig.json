{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "strictBindCallApply": true,
    "baseUrl": ".",
    "rootDir": "./"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
